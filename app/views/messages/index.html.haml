.container
  .sidebar
    .sidebar__header
      .sidebar__header__name
        %h2=current_user.name
      %ul.sidebar__header__lists
        %li.list.icon__cog
          = link_to edit_user_path(current_user.id),class: "icon" do
            = fa_icon "cog"
        %li.list
          = link_to new_group_path,class: "icon" do
            = fa_icon "pencil-square-o"

    .sidebar__groups
      .sidebar__groups__comment
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            %h4=group.name
            %p=group.show_last_message

  .messages
    .messages__header
      .messages__header__left
        .messages__header__left__group-name
          =@group.name
        %ul.messages__header__left__members
          %li.member
            Member :
          -@group.users.each do |user|
            %li.member
              =user.name

      .messages__header__right
        =link_to "Edit", edit_group_path(@group), alt: "Edit", class: "messages__header__right__edit"
    .messages__body
      .messages__body__message__infomation
        %br
        - @messages.each do |message|
          %span.name=message.user.name
          %span.date=message.created_at
          %br
          - if message.message.present?
            %p=message.message
          - if message.image.present?
            =image_tag message.image.url ,class: "image"
          %br

    .form
      .form__input
        = form_for [@group, @message] do |f|
          %ul
            %li
              = f.text_field :message, class: "form__input__message", placeholder: "type a message"
            %li
              .form__input__icon__space
                = f.label :image do
                  = fa_icon 'picture-o',class: 'icon__label fa-lg'
                  = f.file_field :image, class: 'icon__hidden'
            %li
              = f.submit "SEND", class: "form__input__button"
